<table class="table table-striped">
    <thead>
    <tr>
        <th></th>
        <th></th>
        <th></th>
        <th>Item</th>
        <th>Base</th>
        <th>Sauce</th>
        <th>Ingredients</th>
        <th>Extras</th>
        <th>Quantity</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% set deliveryPrice = 0 %}
    {% set orderPrice = 0 %}
    {% set totalOrderPrice = 0 %}
    {% set totalPrice = 0 %}
    {% for itemOrder in userOrder.itemOrders %}
        <tr>
            {% set totalOrderPrice = totalOrderPrice + item_order_price(itemOrder) %}

            <th><button class="btn-delete-order-item" data-id="{{ itemOrder.id }}"><i class="material-icons">delete</i></button></th>
            <th><img src="{{ asset(itemOrder.bowl.image.imagePath) }}" alt="{{ itemOrder.bowl.image.imagePath }}" draggable="false"></th>
            <th>{{ itemOrder.bowl.name }} <br>{{ itemOrder.size.name }}</th>
            <th>{{ itemOrder.base.name }}</th>
            <th>{{ itemOrder.sauce.name }}</th>
            <th>
                {% for itemOrderIngredients in itemOrder.itemOrderIngredients %}
                    {{ itemOrderIngredients.ingredient.name }} <br>
                {% endfor %}
            </th>
            <th>
                {% for itemOrderExtraIngredients in itemOrder.itemOrderExtraIngredients %}
                    {{ itemOrderExtraIngredients.extraIngredient.name }} <br>
                {% endfor %}
            </th>
            <th><input type="number" id="quantity" name="quantity" min="1" max="20" value="1" data-id="{{ itemOrder.id }}"></th>
            <th>
                {% set orderPrice = item_order_price(itemOrder) %}
                {{ itemOrder.size.currency }} {{ orderPrice }}
            </th>
        </tr>
    {% endfor %}
    {% set totalPrice = deliveryPrice + totalOrderPrice %}
    </tbody>
</table>

