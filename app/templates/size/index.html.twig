{% extends 'base.html.twig' %}

{% block title %}Hello SizeController!{% endblock %}

{% block body %}
    <table id="sizes" class="table table-striped table-field">
        <thead>
        <tr>
            <th>id</th>
            <th>name</th>
            <th>description</th>
            <th>currency</th>
            <th>price</th>
        </tr>
        </thead>
        <tbody>
        {% for size in sizes %}
            <tr>
                <td >{{ size.id }}</td>
                <td >{{ size.name }}</td>
                <td >{{ size.description }}</td>
                <td >{{ size.currency }}</td>
                <td >{{ size.price }}</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}
