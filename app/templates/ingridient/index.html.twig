{% extends 'base.html.twig' %}

{% block title %}Hello IngridientController!{% endblock %}

{% block body %}
    <table id="ingridients" class="table table-striped table-field">
        <thead>
        <tr>
            <th >id</th>
            <th >name</th>
        </tr>
        </thead>
        <tbody>
        {% for ingridient in ingridients %}
            <tr>
                <td >{{ ingridient.id }}</td>
                <td >{{ ingridient.name }}</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}
