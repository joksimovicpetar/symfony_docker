{% extends 'base.html.twig' %}

{% block title %}Hello BowlController!{% endblock %}

{% block body %}

    <table id="bowls" class="table table-striped table-field">
        <thead>
        <tr>
            <th >id</th>
            <th >name</th>
            <th >description</th>
            <th >image</th>
        </tr>
        </thead>
        <tbody>
        {% for bowl in bowls %}

            <tr>
                <td >{{ bowl.id }}</td>
                <td >{{ bowl.name }}</td>
                <td >{{ bowl.description }}</td>
                <td ><img src="{{ asset(bowl.imageId.imagePath) }}" alt="{{ bowl.imageId.imagePath }}" /></td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}
