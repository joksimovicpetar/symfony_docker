{% extends 'base.html.twig' %}

{% block title %}Choose Bowl{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col s4">
                <h2 class="caption-bowl">Make your own poke bowl</h2>
            </div>
        </div>
        <div class="row">
            <div class="col s4">
                <p class="text-bowl">Select the type of bowl you would like, the size, add the base, sauce and all the
                    added ingridients. We'll take care of the rest!
                <p/>
            </div>
        </div>
        <div class="row" id="card-rows">
            {% for bowl in bowls %}
                <div class="col s3 bowl-item-js">
                    {% include 'bowl/bowl-component.html.twig' with {'bowl': bowl} %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
{% block javascriptsBody %}
        <script src="{{ asset('js/bowl.js') }}"></script>
{% endblock %}
{% block footer %}
    <div class="container">
        <div class="row">
            <div class="col s8 col-footer">
                <p>Step 1 of 6</p>
            </div>
            <div class="col s4">

                <a class="waves-effect waves-light btn btn-next" href="http://localhost:8080/size">Next</a>

            </div>
        </div>
        <div class="row">
            <div class="col s8">
                <div class="progress">
                    <div class="determinate" style="width: 16.6%"></div>
                </div>
            </div>
        </div>
    </div>

{%endblock %}