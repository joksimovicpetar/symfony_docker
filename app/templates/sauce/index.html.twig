{% extends 'base.html.twig' %}

{% block title %}Hello SauceController!{% endblock %}

{% block body %}


      <table id="sauces" class="table table-striped table-field">
         <thead>
         <tr>
            <th >id</th>
            <th >name</th>
            <th >description</th>
         </tr>
         </thead>
         <tbody>
         {% for sauce in sauces %}
            <tr>
               <td >{{ sauce.id }}</td>
               <td >{{ sauce.name }}</td>
               <td >{{ sauce.description }}</td>
            </tr>
         {% endfor %}

         </tbody>
      </table>



{% endblock %}
