{% extends 'base.html.twig' %}

{% block title %}Hello BaseController!{% endblock %}

{% block body %}

    <table id="bases" class="table table-striped table-field">
        <thead>
        <tr>
            <th >id</th>
            <th >name</th>
            <th >description</th>
            <th >image</th>
        </tr>
        </thead>
        <tbody>
        {% for base in bases %}

            <tr>
                <td >{{ base.id }}</td>
                <td >{{ base.name }}</td>
                <td >{{ base.description }}</td>
                <td ><img src="{{ asset(base.imageId.imagePath) }}" alt="{{ base.imageId.imagePath }}" /></td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
{% endblock %}
